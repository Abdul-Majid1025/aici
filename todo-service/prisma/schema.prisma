generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String   @default("todo")
  userUuid    String
  createdAt   DateTime @default(now())

  @@unique([id, userUuid])
}
